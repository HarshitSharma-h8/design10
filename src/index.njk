<!-- Testimonial -->
<section class="mycontainer paddingY bg-[var(--bgCream)]">
    <div class="mb-10">
        <h2 class="text-center text-4xl mb-3 text-[var(--darkBlue)] font-bold">Client Voices</h2>
        <p class="hidden sm:block text-center  text-[var(--colorDark)]">Our customers would refer AquaZap to a friend. Experience The AquaZap Difference for yourself!
            </p>
    </div>

    <div class="container swiper">
        <div class="slider-wrapper">
            <div class="card-list swiper-wrapper">
                {% for testimonial in testimonials %}
                    <div class="card-item swiper-slide bg-[var(--primaryColor)] rounded-xl group overflow-hidden h-[20rem] p-8">
                        <div class="flex flex-col justify-between h-full">
                            <div class="stars">
                                {% for i in range(1, 6) %}
                                    {% if i <= testimonial.stars %}
                                        <span class="text-[var(--gold)] text-lg">&#9733;</span>
                                    {% endif %}
                                {% endfor %}
                                <blockquote>
                                    <p class="text-[var(--colorWhite)]">"{{ testimonial.message }}"</p>
                                </blockquote>
                            </div>

                            <p class="text-[var(--colorWhite)]">~{{testimonial.person}}</p>
                        </div>
                    </div>
                {% endfor %}
            </div>

            <div class="swiper-pagination"></div>
            <div class="swiper-slide-button swiper-button-prev"></div>
            <div class="swiper-slide-button swiper-button-next"></div>
        </div>
    </div>
</section>

<!-- Blogs -->
<section class="mycontainer paddingY bg-[var(--colorWhite)]">
    <div class="mb-10">
        <h2 class="text-center text-4xl mb-3 text-[var(--darkBlue)] font-bold">AquaZap Blogs</h2>
        <a href="/pages/allblog"
                class="w-fit mx-auto mt-8 block bg-[var(--green)] text-[var(--colorWhite)] hover:bg-[var(--greenHover)] py-2 px-4 rounded-md  transition duration-300 ease-in-out text-[1.1rem] uppercase">Read More
        </a>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
        {% for blog in blogs %}
            {% if loop.index <= 3 %}
                <a href="/blog/{{ blog.slug }}" class="border-2 hover:border-[var(--primaryColor)] rounded-md overflow-hidden shadow-md transition duration-300 ease-in-out">
                    <img src="{{ blog.img }}" alt="{{ blog.title }}" class="">
                    <h1 class="text-xl p-4">{{ blog.title }}</h1>
                </a>
            {% endif %}
        {% endfor %}
    </div>
</section>

