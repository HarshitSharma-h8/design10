---
layout : 'base.njk'
title : AquaZap | blogs

pagination:
  data: blogs
  size: 1
  alias: blog
permalink: "/blog/{{ blog.slug }}/"

heroImgSrc : "/assets/homehero.jpg"
heroImgAlt : "HomePageHeroImg"
heroTitle : "Got a leak? Weâ€™re on it!"
heroBTN : "hidden"
---

{% include "heroSection.njk" %}

<section class="mycontainer paddingY bg-[var(--colorWhite)]">
  <div>
    <h2 class="text-3xl font-normal">{{ blog.title }}</h2>
    <div class="flex item-center gap-6 mt-4">
      <span class="flex items-center gap-[.5rem] text-lg">
        <i class="fa-regular fa-clock"></i>
        {{blog.date}}</span>
      <span class="flex items-center gap-[.5rem] text-lg">
        <i class="fa-regular fa-user"></i>
        {{blog.author}}</span>
    </div>
  
    <img src={{blog.img}} alt={{blog.title}} class="lg:h-[60vh] lg:w-[80%] object-cover mt-4 rounded-md">
    <div class="mt-4">
      <!-- Iterating through the tags array -->
      {% for tag in blog.tags %}
        <span class="inline-block text-sm bg-gray-200 text-black px-3 py-1 rounded-full m-1">
          {{ tag }}
        </span>
      {% endfor %}
    </div>
    <p class="text-lg font-normal mt-4 text-[var(--textGray2)]">{{ blog.summary}}</p>
    <p class="text-lg font-normal mt-4 text-[var(--textGray2)]">{{ blog.content}}</p>
  </div>
</section>

<section class=" paddingY bg-[var(--bgCream)] text-[var(--colorWhite)] h-[25vh] mt-40">
  <div class="w-fit mx-auto rounded-md bg-[var(--primaryColor)] py-12 px-12 text-center text-white -mt-[10rem]">
    <h2 class="text-3xl font-bold mb-6">Book a Cleaning with AquaZap Today!</h2>
    <div class="flex justify-center gap-4">
      <a href="/pages/contact" class="bg-white text-[var(--primaryColor)] py-3 px-6 rounded-lg shadow-md hover:bg-gray-100 transition">SCHEDULE ONLINE</a>
      <a href="tel:8669376739" class="bg-white text-[var(--primaryColor)] py-3 px-6 rounded-lg shadow-md hover:bg-gray-100 transition">CALL NOW</a>
    </div>
  </div>
</section>

<!-- Blogs -->
<section class="mycontainer paddingY bg-[var(--colorWhite)]">
    <div class="mb-10">
      <h2 class="text-center text-4xl mb-3 text-[var(--darkBlue)] font-bold">Related Blog Articles</h2>
      <a href="/pages/allblog"
                      class="w-fit mx-auto mt-8 block bg-[var(--green)] text-[var(--colorWhite)] hover:bg-[var(--greenHover)] py-2 px-4 rounded-md  transition duration-300 ease-in-out text-[1.1rem] uppercase">Read More
        </a>

    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      {% for blog in blogs %}
        {% if loop.index <= 3 %}
          <a href="/blog/{{ blog.slug }}" class="border-2 hover:border-[var(--primaryColor)] rounded-md overflow-hidden shadow-md transition duration-300 ease-in-out">
            <img src="{{ blog.img }}" alt="{{ blog.title }}" class="">
            <h1 class="text-xl p-4">{{ blog.title }}</h1>
          </a>
        {% endif %}
      {% endfor %}
    </div>
</section>